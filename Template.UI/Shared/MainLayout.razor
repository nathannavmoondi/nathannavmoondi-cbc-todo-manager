@inherits LayoutComponentBase
@using Blazored.Toast.Configuration


<PageTitle>CBC To Do Manager</PageTitle>



<div class="page">
 @*    <div class="sidebar">
        <NavMenu />
    </div>
 *@
    <BlazoredToasts Position="ToastPosition.TopRight"
                    Timeout="4"
                    IconType="IconType.FontAwesome"
                    SuccessClass="success-toast-override"
                    SuccessIcon="fa fa-thumbs-up"
                    ErrorIcon="fa fa-bug" />
    <div id="main">
        <div id="header">
            <div id="logo">
                <div id="logo_text">
                    <!-- class="logo_colour", allows you to change the colour of the text -->
                    <h1><a href="index.html">
                         <img class="cbcimage" src="https://upload.wikimedia.org/wikipedia/commons/thumb/6/67/CBC_Logo_1992-Present.svg/2048px-CBC_Logo_1992-Present.svg.png"/>
                            <span class="logo_colour2">Canadian&nbsp;</span><span class="logo_colour">Broadcasting&nbsp;</span><span class="logo_colour2">Corporation</span>
                        </a>
                    </h1>
                    <h2>CBC ToDo Manager by Nathan Nav Moondi</h2>
                </div>
            </div>
            <div id="menubar">
                <ul id="menu">
                    <!-- put class="selected" in the li tag for the selected page - to highlight which page you're on -->
                    @* <li class="selected "><a href="/">Home</a></li>                     *@
                    <li class=""><a href="/">Home</a></li>
                    <li>
                        <NavLink class="nav-link" href="/todos" Match="NavLinkMatch.All">
                            <span class="" aria-hidden="true"></span> Todos
                        </NavLink>
                    </li>
                    <li>
                        <NavLink class="nav-link" href="/details" Match="NavLinkMatch.All">
                            <span class="" aria-hidden="true"></span> Details
                        </NavLink>
                    </li>                   
                    <li>
                        <a href="http://linkedin.com/in/nathan-nav-moondi">Linkedin</a>
                    </li>
                    <li>
                        <NavLink class="nav-link" href="mailto:nav.moondi@gmail.com" Match="NavLinkMatch.All">
                            <span class="" aria-hidden="true"></span> Contact
                        </NavLink>
                    </li>
                    
                </ul>
            </div>
        </div>
        <div id="site_content">
            @Body
        </div>
    <div id="footer">
            Copyright &copy; Nathan Nav Moondi and Happy Dappy Technologies
    </div>
  </div>

</div>

        
   

